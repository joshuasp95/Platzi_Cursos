# =============================================
# CONFIGURACIÓN DE BASE DE DATOS - JAVA
# =============================================

# Para el proyecto Java_SE_Persistencia_Datos
DB_URL=jdbc:mysql://localhost:3306/
DB_NAME=platzi_cursos
